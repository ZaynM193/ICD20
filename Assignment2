import java.util.Scanner;

public class Assignment2 {

    // Function to generate the Collatz sequence and find the highest value
    public static void Assignment2(int n) {
        int highestValue = n;  // Initialize the highest value as the starting number
        int terms = 1;  // Start with 1 term (the initial number)

        // Print the first number
        System.out.print(n);

        // Generate the Collatz sequence
        while (n != 1) {
            if (n % 2 == 0) {  // If the number is even
                n = n / 2;
            } else {  // If the number is odd
                n = 3 * n + 1;
            }

            // Print the next number in the sequence
            System.out.print("; " + n);

            // Update the highest value if necessary
            if (n > highestValue) {
                highestValue = n;
            }

            // Increment the term count
            terms++;
        }

        // Display the results
        System.out.println();
        System.out.println("Number of terms = " + terms);
        System.out.println("Highest value reached = " + highestValue);
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        while (true) {
            // Get user input
            System.out.print("Enter a whole number > 0: ");
            int n = scanner.nextInt();

            // Check for valid input
            if (n <= 0) {
                System.out.println("Please enter a number greater than 0.");
                continue;
            }

            // Get the Collatz sequence for the number
            collatzSequence(n);

            // Ask if the user wants to do another sequence
            System.out.print("Do another? (y/n): ");
            char doAnother = scanner.next().charAt(0);

            if (doAnother != 'y' && doAnother != 'Y') {
                System.out.println("Goodbye!");
                break;  // Exit the loop if the user doesn't want to continue
            }
        }

        scanner.close();  // Close the scanner to prevent memory leak
    }
}

